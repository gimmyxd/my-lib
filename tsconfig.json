{
  "include": ["src"],
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "react-jsx",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "esModuleInterop": true,
    "baseUrl": "./",
    "declaration": true,
    "isolatedModules": true,
    "experimentalDecorators": true,

  },
  "exclude": ["test/**/*"]
}
